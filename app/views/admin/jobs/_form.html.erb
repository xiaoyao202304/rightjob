<%= simple_form_for [:admin,@job] do |f| %>

  <%= f.input :title %>
  <%= f.input :company %>
  <%= f.input :location %>
  <%= f.input :job_type, :as => :radio_buttons, :collection => Job::JOB_TYPE, :item_wrapper_class => 'inline' %>
  <%= f.input :wage_lower_bound, :label => "薪资下限" %>
  <%= f.input :wage_upper_bound, :label => "薪资上限" %>
  <%= f.input :contact_email %>
  <%= f.input :description %>
  <%= f.input :is_hidden %>

  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
