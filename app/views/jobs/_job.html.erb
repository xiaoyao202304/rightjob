<ul class="job-info form menu" style="list-style: none;">
  <li class="double clearfix">
      <div class="field">
          <label>工作性质</label> <%= job.job_type %>
      </div>
      <div class="field">
          <label>公司</label> <%= job.company %>
      </div>
  </li>
  <li class="double clearfix">
      <div class="field">
          <label>工资</label> <%= job.wage_lower_bound %>k ~ <%= job.wage_upper_bound %>k
      </div>
      <div class="field">
          <label>地点</label> <%= job.location %>
      </div>
  </li>



  <li class="last">
      <div class="field">
          <label><%= "Description" %></label>
          <div class="description"><%= simple_format job.description %></div>
      </div>
  </li>
</ul>
