<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    筛选
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
    <li><%= link_to("按薪资下限排序", jobs_path(:order => "by_lower_bound")) %></li>
    <li><%= link_to("按薪资上限排序", jobs_path(:order => "by_upper_bound")) %></li>
    <li><%= link_to("按发布时间排序", jobs_path) %></li>
  </ul>
</div>

<table class="table table-hover">
  <thead>
    <tr>
      <th>工作名称</th>
      <th>薪资下限</th>
      <th>薪资上限</th>
      <th>发布时间</th>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>
      <td><%= link_to(job.wage_lower_bound) %></td>
      <td><%= link_to(job.wage_upper_bound) %></td>
      <td><%= job.created_at %></td>
    </tr>
    <% end %>
  </tbody>
</table>
